{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "mocha", "chai"]
  },
  "include": ["app/**/*.ts"],
  "exclude": ["app/*.spec.ts", "app/**/*.spec.ts"]
}
